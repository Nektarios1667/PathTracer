// Cornell box style scene
[camera]
from: 0,3,8
to: 0,2,0
fov: 50

[variables]
local: hasCeiling true

[read]
trc: C:\Users\nekta\source\repos\Cpp\PathTracer\data\Materials.trc

[materials]
mat: strongWhiteLight 0,0,0 1.5,1.5,1.5 0 0 1

[objects]
// Floor
triangle: -5,0,-5  -5,0,5   5,0,-5 whiteMatte
triangle: 5,0,-5   -5,0,5   5,0,5 whiteMatte

// Ceiling
.if =hasCeiling ceiling
	triangle: -5,5,-5   5,5,-5  -5,5,5 whiteLight
	triangle: 5,5,-5    5,5,5   -5,5,5 whiteLight
.endif ceiling

// Back wall (Z = -5)
triangle: -5,0,-5   5,0,-5  -5,5,-5 yellowMatte
triangle: 5,0,-5    5,5,-5  -5,5,-5 yellowMatte

// Front wall (behind camera)
triangle: -5,5,5   5,0,5  -5,0,5 whiteMatte
triangle: -5,5,5    5,5,5  5,0,5 whiteMatte

// Left wall (red)
triangle: -5,0,5 -5,0,-5 -5,5,5 whiteShiny
triangle: -5,5,5 -5,0,-5 -5,5,-5 whiteShiny
// Right wall (green)
triangle: 5,0,-5 5,0,5 5,5,5 greenShiny
triangle: 5,5,-5 5,0,-5 5,5,5 greenShiny

// Objects in scene
sphere: -3,1.5,-1 1.5 clearGlass
sphere: 3,1.5,-1 1.5 redGlass
sphere: 0,2,0 2 clearFrostedGlass